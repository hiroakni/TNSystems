@model TodoApp.Models.LoginViewModel

@{
    ViewBag.Title = "ログイン";
    Layout = "~/Views/Shared/_LayoutPaga2.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script>
        function setUser() {
            var id = document.getElementById("UserName").value;
            var pass = document.getElementById("Password").value;

            document.getElementById("UserName").value = "user";
            document.getElementById("Password").value = "pass";
        }
    </script>
</head>
<body>
    <!-- あそび -->
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 text-center"></div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 text-center"></div>
        <div class="col-md-4"></div>
    </div>

    <div class="container">
        @using (Html.BeginForm("Index", "Login", null, FormMethod.Post, new { @class = "form-signin" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="form-signin-heading">ログイン</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "sr-only" })
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control username", placeholder = "ID" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "sr-only" })
            @Html.PasswordFor(model => model.Password, new { @class = "form-control password", placeholder = "Password" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            <div class="text-center text-danger">@ViewBag.Message</div>
            <input type="submit" value="ログイン" class="btn btn-primary" /><br />
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4 text-center">　</div>
                <div class="col-md-4"></div>
            </div>
            <div class="row  text-center">
                <div class="text-danger">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    Debug用
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span><br />
                    一般ユーザログインボタン
                </div>
                <input type="submit" value="一般" class="btn btn-group btn-default" onclick="setUser()" />
            </div>
        }
    </div>

    <!-- あそび -->
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 text-center"></div>
        <div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 text-center"></div>
        <div class="col-md-4"></div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
